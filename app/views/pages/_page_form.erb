<%= form_tag user_pages_path(current_user.id), id: "new_page_form", :class => "form-group form-inline", remote: true do %>
  <%= text_field_tag "page[name]","", class: "form-control" %>
  <%= hidden_field_tag "page[user_id]", current_user.id %>

  <%= submit_tag "make a new page", class: "btn btn-primary" %>
<% end %>